import random
import time
import re

print("Добро пожаловать в игру 'Грибной лес'!")

while True:
    name = input("Придумай ник: ")
    if re.search(r'\b(лох|блять|хуй|пизда|ебать|мудак|гандон)\b', name, re.IGNORECASE):
        print("Бро, мне не нравится такой ник. ГО другой.")
    else:
        print("Привет, " + name + "!")
        break

print("В этой игре ты будешь ходить по лесу и искать грибы.")
print("Есть шанс, что ты найдешь поганку и умрешь.")
print("Твоя задача собрать как можно больше съедобных грибов.")

score = 0

while True:
    time.sleep(2) 
    mushroom = random.choice(['Белый гриб', 'Лисички', 'Опята', 'Подберезовики', 'Маслята', 'Поганка'])
    if mushroom == "Поганка" and random.randint(1,100) <= 15: 
        print("Ты нашел гриб, но это была поганка! Ты умер! Игра окончена.")
        break
    print("Ты видишь гриб.")
    eat = input("Хочешь его съесть? (да/нет) ")
    if eat.lower() == "да":
        if mushroom == "Поганка":
            print("бб бро ! Ты съел поганку и умер! Игра окончена лох.")
            break
        else:
            print("Хорошо, ты съел гриб. ВКусно хотяб ? ")
            score += 1
            print("Очки : " + str(score) + ".")
    else:
        print("Хорошо, ты прошел мимо гриба.")
        if mushroom == "Поганка" and random.randint(1,100) <= 20: 
            print("Но здесь была поганка! Ты умер! Игра окончена.")
            break

print("Игра окончена, ты лох и азартный тип, очки: " + str(score) + ".")
